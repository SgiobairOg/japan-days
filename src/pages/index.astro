---
// Component Imports
import Months from '../components/Months.astro';
import Dates from '../components/Dates.astro';
import Days from '../components/Days.astro';
import About from '../components/About.astro';

// You can import components from any supported Framework here!
import VueDate from '../components/VueDate.vue';

// Component Script:
// You can write any JavaScript/TypeScript that you'd like here.
// It will run during the build, but never in the browser.
// All variables are available to use in the HTML template below.
let title = 'Dates in Japanese';

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width">
    <title>{title}</title>

    <link rel="icon" type="image/x-icon" href="./favicon.ico" />
    
    <link rel="stylesheet" href="./style/global.css">
    <link rel="stylesheet" href="./style/home.css">
</head>
<body>
    <main class="main">
        <VueDate client:visible/>
        <Months />
        <Days />
        <Dates />
        <About />
    </main>
</body>

<style>
    .main {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 80vh repeat(4, min-content);
        grid-column-gap: 0px;
        grid-row-gap: 3rem;
    }


    @media only screen and (orientation: landscape) {
        .main {
            grid-template-rows: minmax(50vh, min-content) repeat(6, min-content);
            grid-column-gap: 1rem;
            grid-row-gap: 3rem;
        }
    }

    @media only screen and (min-width: 1024px) and (orientation: landscape){
        .main {
            grid-template-columns: repeat(12, 1fr);
        }
    }
</style>
</html>
