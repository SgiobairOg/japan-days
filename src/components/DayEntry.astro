---
  export interface Props {
    day: any;
  }
  const { day } = Astro.props;
---

  <li class="day__entry" data-order="{day.numericOrder}">
    <div class="day-entry__character">
      <ruby class="day-entry__text">{day.character}<rt class="day-entry__ruby">{day.ruby}</rt></ruby>
      <span class="day-entry__meaning">{day.meaning}</span>
    </div>
  </li>

  <style>
    .day-entry__character {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
    .day-entry__text {
      font-size: 4rem;
      font-weight: 900;
    }
    .day-entry__ruby {
      font-size: 1rem;
      font-weight: 900;
    }
    .day-entry__meaning {
      font-size: 1rem;
      font-weight: 500;
      text-align: center;
    }
  </style>